{
  "editor.fontSize": 16,
  "files.autoSave": "onFocusChange",
  "editor.wordWrap": "on",
  "editor.detectIndentation": false,
  "update.mode": "none",
  "explorer.confirmDelete": false,
  "editor.tabSize": 4,
  "editor.formatOnSave": true, // 保存自动化
  "eslint.autoFixOnSave": true, // 保存时自动fix
  // 添加 vue 支持
  // "eslint.validate": [
  //     "javascript",
  //     "javascriptreact",
  //     {
  //         "language": "vue",
  //         "autoFix": true
  //     }
  // ],
  "vetur.format.options.tabSize": 4, //[表情]etur插件格式化空格缩进数量
  // "vetur.format.defaultFormatter.html": "js-beautify-html", // 使用插件格式化 html
  // "vetur.format.defaultFormatter.js": "none"// 屏蔽vetur的js格式化
  "vetur.format.defaultFormatterOptions": {
    // --- 解决格式化单引号变成双引号问题 ---
    "prettier": {
      // "semi": true,
      "singleQuote": true
    }
    // --- 解决问题 ---
  },
  "files.associations": {
    "*.js": "javascriptreact"
  }
}
